@{
    ViewData["Title"] = "Contact";
}
<div class="text-center">
    <h1 class="display-4">Inci DENIZCI</h1>
    <p>Personal Blog</p>
</div>

<!-- Navigation Links -->
<div class="text-center mt-4">
    <nav>
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home Page</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
            </li>
        </ul>
    </nav>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2 class="contact-title">Contact</h2>
            <p>You can contact me by filling out this form.</p>
            <form action="/submitContactForm" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Your Name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Your Email" required>
                </div>
                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <input type="text" id="subject" name="subject" class="form-control" placeholder="Subject" required>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" class="form-control" rows="5" placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <!-- Social Media Section -->
        <div class="col-md-6">
            <h3>Follow me on my Social Media</h3>
            <p>Here you can access my Social Media Accounts:</p>
            <ul class="list-unstyled">
                <li>
                    <a href="https://www.instagram.com/inci.denizci/" target="_blank" class="btn btn-outline-danger mb-2" rel="noopener noreferrer">
                        <i class="fab fa-instagram"></i> Follow me on Instagram
                    </a>
                </li>
                <li>
                    <a href="https://www.linkedin.com/in/inci-denizci-9998532b7/" target="_blank" class="btn btn-outline-primary mb-2" rel="noopener noreferrer">
                        <i class="fab fa-linkedin"></i> Follow me on LinkedIn
                    </a>
                </li>
                <li>
                    <a href="https://www.youtube.com/channel/UCe1t7ezEXmqCqW4IAduj5Ug" target="_blank" class="btn btn-outline-danger mb-2" rel="noopener noreferrer">
                        <i class="fab fa-youtube"></i> Follow me on Youtube
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>